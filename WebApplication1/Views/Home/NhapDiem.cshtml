@model List<WebApplication1.Models.StudentScoreViewModel>

@{
    ViewData["Title"] = "Nhập Điểm 15 Phút";
    Layout = "~/Views/Shared/_LayoutGiaoVien.cshtml";
}

<div class="container">
    <h2 class="my-4">Nhập Điểm 15 Phút - @ViewBag.ClassName</h2>
    <h3>Giáo viên: @ViewBag.TeacherName</h3>

    @using (Html.BeginForm("SaveDiem", "Home", FormMethod.Post))
    {
        @Html.Hidden("classId", (int)ViewBag.ClassId)
        @Html.Hidden("teacherId", (int)ViewBag.TeacherId)
        @Html.Hidden("semester", (int)ViewBag.Semester)
        @Html.Hidden("scoreType", (string)ViewBag.ScoreType)

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tên Sinh Viên</th>
                        <th>Điểm 15 Phút</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].Name</td>
                            <td>
                                <input type="text" name="students[@i].Score15" value="@Model[i].Score15" class="form-control" />
                            </td>
                            <td><input type="hidden" name="students[@i].StudentId" value="@Model[i].StudentId" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <button type="submit" class="btn btn-primary">Lưu điểm</button>
    }
</div>
