@model List<WebApplication1.Models.Student>

@{
    ViewData["Title"] = "TeacherDetails";
    Layout = "~/Views/Shared/_LayoutDaoTao.cshtml";  // Điều chỉnh Layout theo layout thực tế của bạn
}

<h2>Chi tiết giáo viên dạy trong năm học @ViewBag.Year</h2>

@if (Model.Count > 0)
{
    <h3>Giáo viên: @ViewBag.TeacherId</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Mã học sinh</th>
                <th>Tên học sinh</th>
                <th>Ngày sinh</th>
                <th>SĐT phụ huynh</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.Name</td>
                    <td>@student.DateOfBirth</td>
                    <td>@student.SDTPH</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có học sinh nào được giao cho giáo viên này trong năm học @ViewBag.Year.</p>
}
