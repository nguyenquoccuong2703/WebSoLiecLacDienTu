@{
    ViewBag.Title = "TaoDonXinPhep";
    Layout = "~/Views/Shared/_LayoutSoLienLacPhuHuynh.cshtml";
}

@model WebApplication1.Models.Student

<div class="container">
    <h2>Tạo Đơn Xin Phép Nghỉ Học</h2>

    @using (Html.BeginForm("TaoDonXinPhep", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("studentId", Model.StudentId)

        <div class="form-group">
            @Html.Label("Học sinh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("StudentName", Model.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Giáo viên", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("teacherId", (SelectList)ViewBag.Teachers, "Chọn giáo viên", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Lý do", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("reason", null, new { @class = "form-control", rows = 5 })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gửi đơn xin phép" class="btn btn-primary" />
                <a href="@Url.Action("DanhSachDonXinPhepPhuHuynh", "Home", new { studentId = Model.StudentId })" class="btn btn-secondary">Quay lại danh sách đơn xin phép</a>
            </div>
        </div>
    }
</div>
