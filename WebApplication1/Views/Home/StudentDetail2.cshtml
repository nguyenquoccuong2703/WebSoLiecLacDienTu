@model WebApplication1.Controllers.HomeController.StudentDetailViewModel

@{
    ViewData["Title"] = "Student Detail";
    Layout = "~/Views/Shared/_LayoutDaoTao.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<style>
    .container {
        margin-top: 30px;
    }

    .student-detail-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .student-detail-header h2 {
            font-size: 2em;
            color: #007bff;
        }

    .student-info-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .student-info dt {
        font-weight: bold;
        color: #007bff;
    }

    .student-info dd {
        margin-bottom: 10px;
    }

    .action-buttons {
        margin-top: 20px;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 5px;
        }
</style>

<div class="container">
    <div class="student-detail-header">
        <h2>Thông tin chi tiết của học sinh</h2>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="student-info-card">
                <dl class="dl-horizontal student-info">
                    <dt>Tên</dt>
                    <dd>@Model.Name</dd>
                    <dt>Số điện thoại</dt>
                    <dd>@Model.SDTPH</dd>
                    <dt>Ngày sinh</dt>
                    <dd>@Model.DateOfBirth</dd>
                    <dt>Lớp</dt>
                    <dd>@Model.ClassName - @ViewBag.Year</dd>
                    <dt>Phụ huynh</dt>
                    <dd>@Model.ParentName</dd>
                    <dt>Giáo viên chủ nhiệm</dt>
                    <dd>@Model.HomeroomTeacherName - @Model.SubjectName</dd>
                    <dt>Email</dt> <!-- Email -->
                    <dd>@Model.Email</dd>
                    <dt>Địa chỉ</dt> <!-- Địa chỉ -->
                    <dd>@Model.Address</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="row action-buttons">
        <div class="col-md-12">
            <form action="@Url.Action("DeleteStudent", "Home", new { studentId = Model.StudentId, name = ViewBag.ClassName, year = ViewBag.Year })" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa học sinh này không?');" style="display: inline;">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa học sinh</button>
            </form>
            <a href="@Url.Action("ViewGrades", "Home", new { studentId = Model.StudentId })" class="btn btn-primary"><i class="fas fa-eye"></i> Xem điểm</a>
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.amazonaws.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
