@{
    ViewBag.Title = "TaoDonXinPhepGiaoVien";
    Layout = "~/Views/Shared/_LayoutGiaoVien.cshtml";
}

@model WebApplication1.Models.Teacher

<div class="container">
    <h2>Tạo Đơn Xin Phép Nghỉ Dạy</h2>

    @using (Html.BeginForm("TaoDonXinPhepGiaoVien", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("teacherId", Model.TeacherId)

        <div class="form-group">
            @Html.Label("Giáo viên", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("TeacherName", Model.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Lý do", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("reason", null, new { @class = "form-control", rows = 5 })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gửi đơn xin phép" class="btn btn-primary" />
                <a href="@Url.Action("DanhSachDonXinPhepGiaoVien", "Home", new { teacherId = Model.TeacherId })" class="btn btn-secondary">Quay lại danh sách đơn xin phép</a>
            </div>
        </div>
    }
</div>

<style>
    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

    .btn-primary {
        margin-right: 10px;
    }

    .btn-secondary {
        margin-left: 10px;
    }
</style>

